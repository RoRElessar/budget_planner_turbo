<% if @wallet.errors.present? %>
  <%= notice_stream(message: :error, status: 'red') %>
  <%= form_wallet_stream(post: @wallet) %>
<% else %>
  <%= notice_stream(message: :update, status: 'green') %>
  <%= turbo_stream.replace dom_id(@wallet), partial: 'post', locals: { post: @wallet } %>
<% end %>
